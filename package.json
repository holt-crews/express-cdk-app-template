{
  "name": "express-cdk-app-template",
  "version": "1.0.0",
  "description": "Template repository for building express/node apps and deploying them to AWS",
  "main": "app.ts",
  "repository": "git@github.com:holt-crews/express-cdk-app-template.git",
  "author": "Holt Crews <holtcrews47@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "test": "jest",
    "lint": "eslint '**/*.{js,ts}' --fix; prettier '**/*.{json,md,js,ts}' --write;",
    "format-ci": "prettier '**/*.{md,json,js,ts,jsx,tsx}' --check",
    "lint-ci": "eslint '**/*.{js,ts}' --max-warnings 0",
    "infra:build": "cd deploy && tsc",
    "infra:watch": "cd deploy && tsc -w",
    "infra:test": "cd deploy && jest",
    "infra:deploy:lambda": "cdk deploy staging-LambdaTemplateAppStack",
    "infra:deploy:ecs": "cdk deploy staging-ECSTemplateAppStack",
    "cdk": "yarn build && cd deploy && cdk",
    "cdklocal": "yarn build && cd deploy && cdklocal"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.114.1",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "serverless-http": "^3.2.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "aws-cdk": "^2.114.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
