{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "./build"
  },
  "include": ["./src/**/*", "./src/**/*.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}

